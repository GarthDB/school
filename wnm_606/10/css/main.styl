body
	background url('../img/tactile_noise_@2X.png')
	background-size 48px 48px
	font-family "Lucida Grande", "Lucida Sans Unicode", sans-serif
.site
	width 960px
	margin 0 auto
	position relative
#mainheader
	.site
		height 100%
	width 100%
	height 100px
	background #AC3931
	position relative
	&:before
		content ''
		width 50%
		height 100%
		position absolute
		left -110px
		right 0
		background #FA5348
	&:after
		content ''
		position absolute
		left 50%
		margin-left -110px
		top 0
		width 0
		height 0
		border-top 50px solid transparent
		border-bottom 50px solid transparent
		border-left 20px solid #FA5348
#cartsummary
	position absolute
	right 10px
	bottom 50px
	color #fc8074
	font-size 21px
	font-weight bold
	&:before
		content ''
		width 20px
		height 20px
		background url('../img/cart_icon.svg')
		position absolute
		left -40px
#mainnav
	width 100%
	height 40px
	background #51c7d2
	margin-top 11px
	font-size 12px
	font-weight bold
	text-align center
	ul
		height 100%
	li
		display inline-block
		height 100%	
	a
		display inline-block
		height 100%
		box-sizing border-box
		padding 14px 13px 0
		text-decoration none
		color rgb(25,82,89)
		&:hover, &.selected
			background #195259
			color #FFF
#sitesearch
	position absolute
	right 10px
	bottom 10px
	input[type="text"]
		background #FFE8E6
		border 1px solid #70170F
		height 25px
		margin 0 -6px 0 0
		padding 0
	input[type="submit"]
		background #70170f
		border 2px solid #70170f
		border-radius 0
		color #e6e6e6
		height 27px
		margin 0
#logo
	position absolute
	left 50px
	top 15px
#content
	color black